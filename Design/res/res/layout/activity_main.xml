<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/menuchuan" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp" >

                <Button
                    android:id="@+id/download_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/download_style" />

                <Button
                    android:id="@+id/moregame_btn"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/moregame_style" />

                <Button
                    android:id="@+id/infor_btn"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/infor_style" />

                <Button
                    android:id="@+id/exit_btn"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/exit_style" />

            </LinearLayout>

            <TextView
                android:id="@+id/xuView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:text="XU"
                android:textColor="#fc3008"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <Button
            android:id="@+id/batdau_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@drawable/batdau_style" />

        <Button
            android:id="@+id/caidat_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/caidat_style" />

        <Button
            android:id="@+id/huongdan_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/huongdan_style" />

        <Button
            android:id="@+id/kyluc_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/kyluc_style" />
    </LinearLayout>

</LinearLayout>